mixin CollectionItem(config)
  .col-sm-6.col-md-4.mb-3.mb-md-0
    .card.bg-black.text-white.p-6.pb-8
      img.card-img(src=`${CWD}assets/img/gallery/${config.image}` alt='...')
      .card-img-overlay.bg-dark-gradient.d-flex.flex-column-reverse.align-items-center
        h6.text-primary=config.price
        h4.text-light=config.title
      a.stretched-link(href='#')
      
mixin Collection
  section.py-0.pb-6
    .container
      .row.h-100
        .col-lg-7.my-5
          h5.fs-3.fs-lg-5.lh-sm.mb-0.text-uppercase Collections
        .col-12
          #carouselNewArrivals.carousel.slide(data-bs-ride='carousel')
            .carousel-inner
              .carousel-item.active(data-bs-interval='10000')
                .row.h-100.align-items-center               
                  +CollectionItem(arrivals[0])                                                                    
                  +CollectionItem(arrivals[1])                                                                    
                  +CollectionItem(arrivals[2])                                                                                                                                       
              .carousel-item(data-bs-interval='5000')
                .row.h-100.align-items-center               
                  +CollectionItem(arrivals[0])                                                                    
                  +CollectionItem(arrivals[1])                                                                    
                  +CollectionItem(arrivals[2])                    
              .carousel-item(data-bs-interval='3000')
                .row.h-100.align-items-center                                 
                  +CollectionItem(arrivals[0])                                                                    
                  +CollectionItem(arrivals[1])                                                                    
                  +CollectionItem(arrivals[2])                      
              .carousel-item
                .row.h-100.align-items-center         
                  +CollectionItem(arrivals[0])                                                                    
                  +CollectionItem(arrivals[1])                                                                    
                  +CollectionItem(arrivals[2])   
              .row
                button.carousel-control-prev(type='button' data-bs-target='#carouselNewArrivals' data-bs-slide='prev')
                  span.carousel-control-prev-icon(aria-hidden='true')
                  span.visually-hidden Previous
                button.carousel-control-next(type='button' data-bs-target='#carouselNewArrivals' data-bs-slide='next')
                  span.carousel-control-next-icon(aria-hidden='true')
                  span.visually-hidden Next 